{
	"$schema": "https://biomejs.dev/schemas/1.9.0/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": ["node_modules", "dist", "build", ".next", "out", "coverage", "vendor", "bun.lockb"]
	},
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"enabled": true,
		"indentWidth": 2,
		"indentStyle": "tab",
		"lineWidth": 100
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"jsxQuoteStyle": "double",
			"quoteProperties": "asNeeded",
			"trailingCommas": "es5",
			"semicolons": "asNeeded",
			"arrowParentheses": "asNeeded",
			"bracketSpacing": true,
			"bracketSameLine": false
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noConstAssign": "error",
				"noUnusedImports": "error",
				"noUnusedVariables": "warn"
			},
			"style": {
				"noNonNullAssertion": "off",
				"noParameterAssign": "off",
				"useConst": "error"
			},
			"suspicious": {
				"noDebugger": "warn",
				"noConsole": "off",
				"noExplicitAny": "off"
			}
		}
	},
	"overrides": [
		{
			"include": ["src/styles/*.css", "**/*.css"],
			"linter": {
				"enabled": false
			}
		}
	]
}
