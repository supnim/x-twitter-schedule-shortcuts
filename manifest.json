{
	"manifest_version": 3,
	"name": "Twitter/X Shortcuts",
	"version": "0.2.0",
	"description": "Quick scheduling buttons and AI-powered tweet enhancement for X.com",
	"author": "Nimesh (https://x.com/sup_nim)",
	"icons": {
		"16": "icons/icon-16.png",
		"48": "icons/icon-48.png",
		"128": "icons/icon-128.png"
	},
	"permissions": ["storage", "clipboardRead"],
	"host_permissions": [
		"https://x.com/*",
		"https://twitter.com/*",
		"https://api.openai.com/*"
	],
	"action": {
		"default_title": "X Shortcuts",
		"default_popup": "src/popup/index.html"
	},
	"background": {
		"service_worker": "src/background/index.ts",
		"type": "module"
	},
	"content_scripts": [
		{
			"matches": ["https://x.com/*", "https://twitter.com/*"],
			"js": ["src/content/index.tsx"],
			"run_at": "document_idle"
		}
	]
}
